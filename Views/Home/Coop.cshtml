@model iSchoolWebAppBogaard.Models.CoopModel
@{
    ViewData["Title"] = Model.PageTitle;
}

<section class="tableSection">
    <h1>@Model.PageTitle Opportunities</h1>

    <table id="coopTable">
        <thead>
            <tr>
                <th>Employer</th>
                <th>Degree</th>
                <th>City</th>
                <th>Term</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employment in Model.CoopTable.coopInformation)
            {
                <tr>s
                    <td>@employment.Employer</td>
                    <td>@employment.Degree</td>
                    <td>@employment.City</td>
                    <td>@employment.Term</td>
                </tr>
            }
        </tbody>
    </table>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#coopTable').DataTable();
    });
</script>
