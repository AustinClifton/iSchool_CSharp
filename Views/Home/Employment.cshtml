@model iSchoolWebAppBogaard.Models.EmploymentModel
@{
    ViewData["Title"] = Model.PageTitle;
}
    
<section class="tableSection">
    <h1>@Model.PageTitle Opportunities</h1>
    
    <table id="employmentTable">
        <thead>
        <tr>
            <th>Employer</th>
            <th>Degree</th>
            <th>City</th>
            <th>Title</th>
            <th>Start Date</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employment in Model.EmploymentTable.ProfessionalEmploymentInformation) {
            <tr>
                <td>@employment.Employer</td>
                <td>@employment.Degree</td>
                <td>@employment.City</td>
                <td>@employment.Title</td>
                <td>@employment.StartDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
        </tbody>
    </table>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#employmentTable').DataTable();
    });
</script>
